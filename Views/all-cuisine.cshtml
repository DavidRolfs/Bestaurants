@{
  Layout="Shared/_Layout.cshtml";
}

<h1>All Cuisines</h1>

<ul>
  @if (Model.Count != 0)
  {
    @foreach (var cuisines in Model)
    {
      <li><a href="/cuisines/@cuisines.GetId()">@cuisines.GetName()</a>
      <a href="/cuisine/edit/@cuisines.GetId()">Edit Cuisine</a></li>

    }
    <form action="/cuisines/delete" method="post">
    <button class="btn btn-danger" type="submit">Clear all Cuisines</button>
    </form>
  }
</ul>
